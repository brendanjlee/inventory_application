extend layout

block content
  h1 #{title}

  form(method='POST')
    div.form-group 
      label(for='name') Artist Name:
      input#name.form-control(type='text', placeholder='Queen' name='name' required value=(undefined === artist ? '': artist.name))

      label(for='description') Artist Description:
      input#description.form-control(type='text', name='description' required value=(undefined === artist ? '': artist.description))

      label(for='debut') Debut Date:
      input#debut.form-control(type='date' name='debut' required value=(undefined===artist ? '': artist.debut))

    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for err in errors
        li != err.msg

