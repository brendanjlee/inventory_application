extends layout

block content

  h1 #{title}: #{genre.name}

  if genre_albums.length
    p #[strong Delete the following albums before deleting this genre]
    div(style='margin-left:20px; margin-top:20px')
      h4 Genre Albums
        ul
        each album in genre_albums
          li
            a(href=album.url) #{album.name}
  else
    p Do you really want to delete this genre?

    form(method='POST')
      div.form-group
        input#genreid.form-control(type='hidden', name='genreid', value=genre._id)
      button.btn.btn-primary(type='submit') Delete